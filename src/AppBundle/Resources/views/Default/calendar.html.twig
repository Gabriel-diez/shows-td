{% extends 'AppBundle::layout.html.twig' %}

{% block menu_calendar %}active{% endblock %}

{% block contents %}
    <section>
    	<div class="container">
            <h3>Épisodes à venir</h3>

            {% for episode in episodes %}
                <div class="col-xs-12 col-md-6">
                    <div class="col-xs-4 col-md-4">
                        <img class="pull-left" style="width:80%;margin:15px" src="{{ web_image('uploads/'~episode.season.show.image).resize(200, 300).png }}" />
                    </div>

                    <div class="col-xs-6 col-md-6">
                        <h3>
                            {{ episode.season.show }}
                        </h3>

                        <h4>Saison {{ episode.season }}
                        </h4>
                        {{ episode.number }} - {{ episode }} - {{ episode.date|localizeddate('medium', 'none') }}
                    </div>

                    <div class="col-xs-2 div col-md-2">
                        <h4>
                        {% set currentDate = "now"|date("m/d/Y") %}
                        {% set difference = date(episode.date).diff(date(currentDate)) %}
                        <span id="daysleft" class="pull-right label">
                                J - {{ difference.days }}
                        </span>
                        </h4>
                    </div>
                </div>
            {% endfor %}

            </div>
    </section>
{% endblock %}